{
  "name": "jira-sync-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "lint": "tsc --noEmit",
    "sync:init": "node --loader ts-node/esm scripts/initial-sync.ts",
    "test:list-user-project": "node --loader ts-node/esm scripts/list-user-project-issues.ts",
    "test:auth": "ts-node-esm scripts/test-auth.ts",
    "test:sync-cycle": "npm run build && node scripts/test-sync-cycle-dist.js"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "preferTsExts": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext"
    }
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "jira.js": "^5.2.2",
    "mongoose": "^7.6.5",
    "node-cron": "^3.0.3",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "pino-pretty": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
